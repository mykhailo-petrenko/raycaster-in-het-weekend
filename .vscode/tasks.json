{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Conan Install",
            "type": "shell",
            "command": "conan install . --output-folder=build --build=missing -s build_type=Debug",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake --preset conan-debug",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake --build build --preset conan-debug",
            "group": "build",
            "problemMatcher": []
        }
    ]
}
